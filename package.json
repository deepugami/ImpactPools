{
  "name": "stellar-impactpools",
  "version": "1.0.0",
  "description": "DeFi lending pools with charitable yield donations on Stellar network",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "setup": "node scripts/start-dev.js",
    "fund-testnet": "node scripts/fund-testnet-accounts.js",
    "test": "echo \"Run npm test in frontend and backend directories\"",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist"
  },
  "keywords": ["stellar", "blockchain", "defi", "charity", "blend", "hackathon"],
  "author": "ImpactPools Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "node-fetch": "^3.3.2"
  }
} 